.scrollContainer {
  height: 30px;
  display: flex;
  justify-content: space-around;
  justify-items: center;
  box-sizing: border-box;
  /* background-color: #c6e6e8; */
}

.naviContent {
  /* width: 25%; */
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  font-size: 14px;
  color: black;
  line-height: 30px;
  font-weight: 550;
}

.naviitem {
  font-size: 14px;
  color: black;
  line-height: 30px;
  font-weight: 600;
  box-sizing: border-box;
  border-radius: 12rpx;
}

.active {
  display: none;
}

.itemshover {
  font-weight: 700;
  border-bottom: 4rpx solid #5fa503;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.backtop {
  width: 70rpx;
  line-height: 70rpx;
  border-radius: 50%;
  background-color: #5fa503;
  position: fixed;
  bottom: 180rpx;
  right: 30rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border: 1rpx solid #fff;
}


